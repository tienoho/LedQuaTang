@using Web.Core
@model IEnumerable<Web.Model.About>
 @{ 
     int i = 0;
 }
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align:center;">TT</th>
            <th style="text-align:center;">Tiêu đề</th>
            <th style="text-align:center;">Nội dung</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td  style="text-align:center;width:50px">@i</td>
                <td  style="vertical-align: middle;">@item.MetaTitle</td>
                <td>@HelperString.TruncateByWord(HelperString.StripHTML(HttpUtility.HtmlDecode(item.Contents)), 120)</td>
                <td  style="width:150px">
                    <div class="btn-list pull-right mr5">
                        <a href="javascript:void(0)" class="btn btn-primary btn-bordered" onclick="about.loadfrmDetail(@item.ID)" title="Xem chi tiết">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </a>
                        <a href="/Admin/About/Edit/@item.ID" class="btn btn-primary btn-bordered">
                            <i class="glyphicon glyphicon-pencil"></i></a>
                        <a href="#" class="btn btn-danger btn-bordered" onclick="about.ondelete(@item.ID)">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        InitClickCheckAllInTable("chkall", function (res) {
            $("#hdfID").val(res);
        });
      
    });
</script>
