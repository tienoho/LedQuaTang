@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
@model Web.Model.User
<div class="panel panel-color panel-primary panel-pages" style="box-shadow: 1px 30px 48px 5px rgba(142, 142, 142, 0.71); ">
    <div class="panel-heading bg-img toplogin">
        <img src="/Content/Admin/images/logo.png" />
        <h3 class="text-center m-t-10 text-white">Tạo mới tài khoản <br> Liên minh HTX Quảng Trị</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "frm", @class = "form-horizontal m-t-20" }))
        {
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(g=>g.Email, new {@class="form-control input-lg", type="email", required="", placeholder="Email"})
                </div>
            </div>

            <div class="form-group ">
                <div class="col-xs-12">
                    @Html.TextBoxFor(g => g.UserName, new { @class = "form-control input-lg", required = "", placeholder = "Tên đăng nhập" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(g => g.Password, new { @class = "form-control input-lg", required = "", placeholder = "Mật khẩu" })
                </div>
            </div>
            <div class="form-group text-center m-t-40">
                <div class="col-xs-12">
                    <button class="btn btn-primary waves-effect waves-light btn-lg w-lg" type="submit">Đăng ký</button>
                </div>
            </div>

            <div class="form-group m-t-30">
                <div class="col-sm-12 text-center">
                    @Html.ActionLink("Đã có tài khoản?","Login")
                </div>
            </div>
        }
    </div>
</div>