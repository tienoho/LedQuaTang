@model Web.Model.Product
    @{ 
        string status = string.Empty;
        switch (Model.Status)
        {
            case 1:
                status = "Sản phẩm bán chạy";
                break;
            case 2:
                status = "Sản phẩm tiêu biểu";
                break;
            case 3:
                status = "Sản phẩm khuyến mãi";
                break;

        }
          var lstImg = (List<string>)ViewBag.ImageMore;
        }

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">Trạng thái:</label>
        <div class="col-md-10">
            <p class="detail_product">@status</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tên sản phẩm:</label>
        <div class="col-md-10">
            <p class="detail_product">@Model.Name</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Hình ảnh:</label>
        <div class="col-md-10">
           <img style="width:100px" src="@Model.Images"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Nhiều hình ảnh:</label>
        <div class="col-md-10">
            @if (lstImg != null && lstImg.Count > 0)
            {
                foreach (var item in lstImg)
                {
                    <div class="inline"><img style="width:100px" src="@item" /></div>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Giá bán:</label>
        <div class="col-md-10">
            <p class="detail_product">@String.Format("{0:0,0}", Model.Price).Replace(",", ".")</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Giá khuyến mãi:</label>
        <div class="col-md-10">
            <p class="detail_product">@String.Format("{0:0,0}", Model.Sale).Replace(",", ".")</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Mô tả:</label>
        <div class="col-md-10 detail_product">
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>
