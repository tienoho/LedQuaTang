@model  List<Web.Model.Product>
    @{
        var dothtml = ".html";
    }
    @using Web.Core

    <aside id="woocommerce_products-3" class="widget woocommerce widget_products">
        <span class="widget-title shop-sidebar">Gấu mới</span>
        <div class="is-divider small"></div>
        <ul class="product_list_widget">
            @foreach (var item in Model)
            {
            <li>

                <a href="/chi-tiet-san-pham/@item.ID/@HelperString.RenderLinkSeo(item.Name)@dothtml">
                    <img width="100" height="100"
                         src="@item.Images"
                         class="attachment-woocommerce_gallery_thumbnail size-woocommerce_gallery_thumbnail"
                         alt="@item.Name"
                         srcset="@item.Images 100w, @item.Images 150w"
                         sizes="(max-width: 100px) 100vw, 100px" /> <span class="product-title">@HelperString.TruncateByWord(HelperString.StripHTML(HttpUtility.HtmlDecode(item.Name)), 50)</span>
                    </a>


                    @{
                        if (item.Price == null)
                        {
                            <span class="woocommerce-Price-amount amount">
                                Liên hệ<span class="woocommerce-Price-currencySymbol"></span>
                            </span>
                        }
                        if (item.Price != null)
                        {
                            <span class="woocommerce-Price-amount amount">
                                @String.Format("{0:0,0}", item.Price).Replace(",", ".")&nbsp;<span class="woocommerce-Price-currencySymbol">&#8363;</span>
                            </span>

                        }
                    }
                </li>
            }
            </ul>
    </aside>

