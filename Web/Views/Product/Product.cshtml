
@{
    TempData["PathName"] = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dothtml = ".html";
}
@model List<Web.Model.Product>
    @using Web.Core
    <main id="main" class="">
        <div class="row category-page-row">
            <div class="col large-12">
                <div class="shop-container">
                    <div class="woocommerce-notices-wrapper"></div>
                    <div class="products row row-small large-columns-4 medium-columns-3 small-columns-2 equalize-box" id="loadData">
                        @foreach (var item in Model)
                        {
                            <div class="product-small col has-hover product type-product post-1008 status-publish first instock has-post-thumbnail shipping-taxable purchasable product-type-simple">
                                <div class="col-inner">
                                    <div class="badge-container absolute left top z-1" id="paginationholder"></div>
                                    <div class="product-small box">
                                        <div class="box-image">
                                            <div class="image-none">
                                                <a href="/chi-tiet-san-pham/@item.ID/@HelperString.RenderLinkSeo(item.Name)@dothtml">
                                                    <img width="247" height="300"
                                                         src="@item.Images"
                                                         class="attachment-woocommerce_thumbnail size-woocommerce_thumbnail"
                                                         alt="@item.Name" />
                                                </a>
                                            </div>
                                            <div class="image-tools is-small top right show-on-hover"></div>
                                            <div class="image-tools is-small hide-for-small bottom left show-on-hover">
                                            </div>
                                            <div class="image-tools grid-tools text-center hide-for-small bottom hover-slide-in show-on-hover">
                                                <a rel="nofollow" href="indexbb47.html?add-to-cart=1008"
                                                   data-quantity="1" data-product_id="1008" data-product_sku="LYLY19"
                                                   class="ajax_add_to_cart add_to_cart_button add-to-cart-grid no-padding"
                                                   style="width:0;display:block">
                                                    <div class="cart-icon tooltip absolute is-small" title="Mua hàng">
                                                        <strong>+</strong>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="box-text box-text-products text-center grid-style-2">
                                            <div class="title-wrapper">
                                                <p class="name product-title">
                                                    <a href="/chi-tiet-san-pham/@item.ID/@HelperString.RenderLinkSeo(item.Name)@dothtml">
                                                        @HelperString.TruncateByWord(HelperString.StripHTML(HttpUtility.HtmlDecode(item.Name)), 50)
                                                    </a>
                                                </p>
                                            </div>
                                            <div class="price-wrapper">
                                                <span class="price">
                                                    @{
                                                        if (item.Price == null)
                                                        {
                                                            <span class="woocommerce-Price-amount amount">
                                                                Liên hệ<span class="woocommerce-Price-currencySymbol"></span>
                                                            </span>
                                                        }
                                                        if (item.Price != null)
                                                        {
                                                            <span class="woocommerce-Price-amount amount">
                                                                @String.Format("{0:0,0}", item.Price).Replace(",", ".")&nbsp;<span class="woocommerce-Price-currencySymbol">&#8363;</span>
                                                            </span>

                                                        }
                                                    }

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="container">
                        <nav class="woocommerce-pagination">
                            <ul class="page-numbers nav-pagination links text-center">
                                <li><span aria-current='page' class='page-number current'>1</span></li>
                                <li><a class='page-number' href='page/2/index.html'>2</a></li>
                                <li>
                                    <a class="next page-number" href="page/2/index.html">
                                        <i class="icon-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="page-load-status">
                        <div class="loader-spinner infinite-scroll-request text-center">
                            <div class="loading-spin"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
