@{
    ViewBag.Title = "Khôi phục mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
@model Web.Model.tbl_User
<script src="/Scripts/jquery.validate.min.js"></script>
<div class="panel panel-color panel-primary panel-pages" style="box-shadow: 1px 30px 48px 5px rgba(142, 142, 142, 0.71); ">
    <div class="panel-heading bg-img toplogin">
        <img src="/Content/Admin/images/logo.png" />
        <h3 class="text-center m-t-10 text-white">Khôi phục mật khẩu <br> Liên minh HTX Quảng Trị</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { id = "frmDKThanhVien", @class = "form-horizontal" }))
        {
            if (ViewBag.noEmail == 1)
            {
                <div class="form-group">
                    <div class="col-xs-12 text-danger">Email không tồn tại !</div>
                </div>
            }
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(g=>g.Email, new {@class="form-control input-lg", type="email", required="", placeholder="Email"})
                </div>
            </div>
            <div class="form-group text-center m-t-40">
                <div class="col-xs-12">
                    <button class="btn btn-primary waves-effect waves-light btn-lg w-lg" type="submit">Hoàn tất</button>
                </div>
            </div>

            <div class="form-group m-t-30">
                <div class="col-sm-12 text-center">
                    @Html.ActionLink("Đã có tài khoản?","Login")
                </div>
            </div>
        }
    </div>
</div>
<script>
    // Basic Form
    $(document).ready(function () {
        $("#frmDKThanhVien").validate({
            rules:
            {
                Email:
                {
                    email: true,
                    required: true
                }
            },
            messages:
            {
                Email:
                {
                    email: "Email không đúng định dạng",
                    required: "Chưa nhập email"
                }
            }
        });
    });
</script>
<style>
    label{font-weight:normal}
</style>